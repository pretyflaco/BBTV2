# BlinkPOS Environment Configuration

# ===========================================
# Blink API Configuration
# ===========================================
# Your Blink API Key (get from https://dashboard.blink.sv/api-keys)
BLINKPOS_API_KEY=

# Your Blink BTC Wallet ID
BLINKPOS_BTC_WALLET_ID=

# ===========================================
# Hybrid Storage Configuration (Redis)
# ===========================================
# Redis host (default: localhost for local dev)
REDIS_HOST=localhost

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis password (leave empty for local dev)
REDIS_PASSWORD=

# Redis database number (default: 0)
REDIS_DB=0

# ===========================================
# Hybrid Storage Configuration (PostgreSQL)
# ===========================================
# PostgreSQL host (default: localhost for local dev)
POSTGRES_HOST=localhost

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL database name
POSTGRES_DB=blinkpos

# PostgreSQL user
POSTGRES_USER=blinkpos

# PostgreSQL password
POSTGRES_PASSWORD=

# ===========================================
# Application Configuration
# ===========================================
# Node environment (development, production)
NODE_ENV=development

# JWT secret for session management (generate with: openssl rand -base64 32)
JWT_SECRET=

# Session expiry in seconds (default: 7 days)
SESSION_EXPIRY=604800

# ===========================================
# Feature Flags
# ===========================================
# Enable hybrid storage (Redis + PostgreSQL)
ENABLE_HYBRID_STORAGE=true

# Enable file-based storage fallback (for backward compatibility)
ENABLE_FILE_STORAGE=false

# ===========================================
# Development Settings
# ===========================================
# Enable debug logging
DEBUG=false

# Enable performance metrics
ENABLE_METRICS=false
