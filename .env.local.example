# BlinkPOS Environment Configuration Template
# Copy this file to .env (or .env.local) and fill in your values
#
# IMPORTANT: .env files are gitignored - never commit secrets!

# ===========================================
# Blink API Configuration
# ===========================================
# Your Blink API Key (get from https://dashboard.blink.sv/api-keys)
BLINKPOS_API_KEY=

# Your Blink BTC Wallet ID
BLINKPOS_BTC_WALLET_ID=

# Staging credentials (optional, for development)
BLINKPOS_STAGING_API_KEY=
BLINKPOS_STAGING_BTC_WALLET_ID=

# ===========================================
# Hybrid Storage Configuration (Redis)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Hybrid Storage Configuration (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blinkpos
POSTGRES_USER=blinkpos
POSTGRES_PASSWORD=

# ===========================================
# Security & Encryption
# ===========================================
# IMPORTANT: This key encrypts sensitive data (API keys, NWC URIs)
# Changing this will invalidate all existing encrypted data!
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# JWT secret for session management
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Session expiry in seconds (default: 7 days)
SESSION_EXPIRY=604800

# ===========================================
# Feature Flags
# ===========================================
ENABLE_HYBRID_STORAGE=true
ENABLE_FILE_STORAGE=false

# ===========================================
# Environment Settings
# ===========================================
NODE_ENV=development
DEBUG=false
ENABLE_METRICS=false
PORT=3000

# ===========================================
# External Services (Optional)
# ===========================================
# Blink webhook signing secret (get from Blink Dashboard > Callback Endpoints)
BLINK_WEBHOOK_SECRET=
BLINK_STAGING_WEBHOOK_SECRET=

# Citrusrate API (for street/black market rates)
CITRUSRATE_API_KEY=
CITRUSRATE_BASE_URL=https://citrusrate-be.onrender.com
